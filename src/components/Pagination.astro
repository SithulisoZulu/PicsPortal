---
const { currentPage,totalPages , disablePrevious, disableNext } = Astro.props;

interface Props {
  currentPage: number;
  totalPages: number;
  disablePrevious: boolean;
  disableNext: boolean;
}
---

<!-- Pagination -->
<nav class="flex items-center gap-x-1 mt-3">
    <a href={`/?page=${currentPage - 1}`} class={disablePrevious ? "inline-block bg-gray-100 px-3 py-2 text-gray-400 rounded-lg pointer-events-none dark:bg-gray-700" : "transition-all ease-in-out duration-300 bg-indigo-100 dark:bg-indigo-400 dark:hover:bg-indigo-600 dark:text-white px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg"}>
      <span>Previous</span>
    </a>
  
    {Array.from({ length: totalPages }, (_, i) => (
      <a
        href={`/?page=${i + 1}`}
        class={`transition-all ease-in-out duration-300 min-h-[38px] min-w-[38px] flex justify-center items-center ${currentPage === i + 1 ? 'bg-indigo-100 text-gray-900 dark:bg-indigo-400 dark:hover:bg-indigo-600' : 'bg-gray-200 text-gray-800 hover:bg-indigo-600 dark:hover:bg-indigo-700 hover:text-white'} py-2 px-3 text-sm rounded-lg focus:outline-none focus:bg-gray-300 disabled:opacity-50 disabled:pointer-events-none dark:bg-gray-600 dark:text-white dark:focus:bg-gray-500 ${currentPage === i + 1 ? 'active' : ''}`}
        aria-current={currentPage === i + 1 ? 'page' : undefined}
      >
        {i + 1}
      </a>
    ))}
  
    <a href={`/?page=${currentPage + 1}`} class={disableNext ? "inline-block bg-gray-100 px-3 py-2 text-gray-400 rounded-lg pointer-events-none dark:bg-gray-700" : "transition-all ease-in-out duration-300 bg-indigo-100 px-3 py-2 hover:bg-indigo-600 text-white rounded-lg dark:bg-indigo-400 dark:hover:bg-indigo-600"}>
      <span>Next</span>
    </a>
</nav>
<!-- End Pagination -->