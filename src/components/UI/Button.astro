---
 const { type, outline, id } = Astro.props
 interface Props {
  type   ?: any;
  outline?: boolean;
  id     ?: string
 }
 const fullButton = "w-full sm:w-auto whitespace-nowrap p-2 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-xl border border-transparent bg-black text-white hover:bg-opacity-90 disabled:opacity-50 disabled:pointer-events-non focus:bg-opacity-60";
 const outlineButton = "w-full sm:w-auto whitespace-nowrap p-2 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-xl border border-black  text-black hover:bg-black hover:bg-opacity-20 hover:border-black disabled:opacity-50 disabled:pointer-events-non focus:pointer-events-none focus:bg-opacity-60";
---
<button type={type} class={outline ? outlineButton : fullButton} id={id}>
    <slot />
</button>

<script>
  const spinner = 
  ` <div class="animate-spin inline-block w-3 h-3 border-[2px] border-current border-t-transparent text-white rounded-full" role="status" aria-label="loading">
      <span class="sr-only">Loading...</span>
    </div>
  `
  const btn = document.querySelector("#button") as HTMLButtonElement | null;
  const btnIcon = document.querySelector("#btnIcon") as HTMLButtonElement | null;
  if (btn) {
    btn.onclick = () => {
      btnIcon?.classList.add("hidden")
      btn.innerHTML += spinner;
    };
  }
</script>